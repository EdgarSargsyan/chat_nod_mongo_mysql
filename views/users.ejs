<% layout("layout") -%>

    <% if(user.id) { %>
        <h1>
            Name :
            <%= user.name  %>
                <br> Surname:
                <%=   user.surname %>
                    <br> Email :
                    <%=   user.email %>
                        <br> Gender:
                        <%=   user.gender %>
                            <br> Created:
                            <%=   user.createdAt %>
                                <br>
        </h1>
        <button>
                <a href="/users/exit">Logout</a>
            </button>
        <% } else { %>
            <h1>Incorrect password or Email</h1>
            <button>
                <a href="/">Back</a>
            </button>
            <%  } %>


           